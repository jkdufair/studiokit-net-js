{
	"name": "studiokit-net-js",
	"version": "2.0.0",
	"scripts": {
		"build": "tsc",
		"build:watch": "tsc -w",
		"test": "cross-env BABEL_ENV=test jest",
		"test:ci": "cross-env CI=true yarn test",
		"lint:ts": "tslint -c tslint.json -p tsconfig.json 'src/**/*.{ts,tsx}'",
		"lint:css": "stylelint \"src/**/*.css\"",
		"lint": "run-s lint:**",
		"prettier:check": "prettier --list-different \"src/**/*.{ts,tsx}\"",
		"prettier:write": "prettier --write \"src/**/*.{ts,tsx}\"",
		"fix:ts": "yarn prettier:write && yarn lint:ts --fix",
		"fix:css": "yarn lint:css --fix",
		"fix": "run-s fix:**",
		"coverage": "cross-env BABEL_ENV=test jest --coverage",
		"coveralls": "npm run coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
		"install": "yarn build",
		"prepare": "yarn build"
	},
	"description": "Network/API functions for Studio apps at Purdue",
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"repository": "purdue-tlt/studiokit-net-js",
	"license": "MIT",
	"files": [
		"lib"
	],
	"devDependencies": {
		"@babel/core": "^7.3.4",
		"@babel/preset-env": "^7.3.4",
		"@babel/preset-typescript": "^7.3.3",
		"@redux-saga/testing-utils": "^1.0.1",
		"babel-jest": "^24.1.0",
		"babel-plugin-rewire": "^1.2.0",
		"coveralls": "^3.0.2",
		"cross-env": "^5.2.0",
		"husky": "^1.3.1",
		"jest": "^24.1.0",
		"lint-staged": "^8.1.3",
		"prettier": "^1.16.4",
		"rewire": "^4.0.1",
		"typescript": "^3.3.3333"
	},
	"dependencies": {
		"@types/jest": "^24.0.9",
		"@types/lodash": "^4.14.121",
		"@types/node": "^11.10.4",
		"@types/redux-saga": "^0.10.5",
		"@types/rewire": "^2.5.28",
		"@types/uuid": "^3.4.4",
		"lodash": "^4.17.11",
		"redux": "^4.0.1",
		"redux-saga": "^1.0.1",
		"uuid": "^3.3.2"
	},
	"prettier": {
		"parser": "typescript",
		"trailingComma": "es5",
		"useTabs": true,
		"tabWidth": 4,
		"semi": false,
		"singleQuote": true,
		"printWidth": 100,
		"jsxBracketSameLine": true
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"pre-push": "npm run test"
		}
	},
	"lint-staged": {
		"*.js": [
			"eslint --fix",
			"git add"
		]
	},
	"jest": {
		"collectCoverageFrom": [
			"src/**/*.{ts,tsx}"
		]
	}
}
