{
	"name": "studiokit-net-js",
	"version": "2.0.0",
	"scripts": {
		"clean": "rimraf ./lib",
		"prebuild": "yarn clean",
		"build": "tsc",
		"build:watch": "tsc -w",
		"test": "jest",
		"test:ci": "cross-env CI=true yarn test",
		"lint": "tslint -c tslint.json -p tsconfig.json 'src/**/*.{ts,tsx}'",
		"prettier:check": "prettier --list-different \"src/**/*.{ts,tsx}\"",
		"prettier:write": "prettier --write \"src/**/*.{ts,tsx}\"",
		"fix": "yarn prettier:write && yarn lint --fix",
		"coverage": "jest --coverage",
		"coveralls": "npm run coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
		"install": "yarn build",
		"prepublishOnly": "yarn build"
	},
	"description": "Network/API functions for Studio apps at Purdue",
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"repository": "purdue-tlt/studiokit-net-js",
	"license": "MIT",
	"files": [
		"lib"
	],
	"devDependencies": {
		"@redux-saga/testing-utils": "^1.0.2",
		"@types/jest": "^24.0.9",
		"@types/mockdate": "^2.0.0",
		"coveralls": "^3.0.3",
		"cross-env": "^5.2.0",
		"husky": "^1.3.1",
		"jest": "^24.1.0",
		"jest-fetch-mock": "^2.1.1",
		"lint-staged": "^8.1.5",
		"mockdate": "^2.0.2",
		"prettier": "^1.16.4",
		"rimraf": "^2.6.3",
		"ts-jest": "^24.0.0",
		"tslint": "^5.13.1",
		"typescript": "^3.3.3333"
	},
	"dependencies": {
		"@types/lodash": "^4.14.122",
		"@types/node": "^11.10.4",
		"@types/uuid": "^3.4.4",
		"lodash": "^4.17.11",
		"redux": "^4.0.1",
		"redux-saga": "^1.0.2",
		"uuid": "^3.3.2"
	},
	"prettier": {
		"parser": "typescript",
		"trailingComma": "es5",
		"useTabs": true,
		"tabWidth": 4,
		"semi": false,
		"singleQuote": true,
		"printWidth": 100,
		"jsxBracketSameLine": true
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"pre-push": "npm run test"
		}
	},
	"lint-staged": {
		"*.ts": [
			"yarn prettier:write && yarn fix",
			"git add"
		]
	},
	"jest": {
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"collectCoverageFrom": [
			"src/**/*.{ts,tsx}"
		],
		"automock": false,
		"setupFiles": [
			"./setupJest.ts"
		]
	}
}
