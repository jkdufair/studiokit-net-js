{
	"compilerOptions": {
		/* Basic Options */
		"target": "es5",
		"module": "commonjs",
		"lib": ["esnext", "dom"],
		"declaration": true,
		"outDir": "./lib",

		/* Strict Type-Checking Options */
		"strict": true,
		"skipLibCheck": false,
		"forceConsistentCasingInFileNames": true,

		/* Module Resolution Options */
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true
	}
}